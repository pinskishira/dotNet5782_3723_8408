<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="IdLabel" Content="ID" HorizontalAlignment="Left" Margin="31,40,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.446,-1.449" Height="27" Width="27"/>
        <Label x:Name="ModelLabel" Content="Model" HorizontalAlignment="Left" Margin="31,90,0,0" VerticalAlignment="Top" Width="71"/>
        <Label x:Name="WeightLabel" Content="Weight" HorizontalAlignment="Left" Margin="31,140,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="WeightComboBox" HorizontalAlignment="Left" Margin="250,140,0,0" VerticalAlignment="Top" Width="120" Height="25" SelectionChanged="WeightComboBox_SelectionChanged"/>
        <Label x:Name="BatteryLabel" Content="Battery" HorizontalAlignment="Left" Margin="31,190,0,0" VerticalAlignment="Top"/>
        <Label x:Name="StatusLabel" Content="Status" HorizontalAlignment="Left" Margin="31,240,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LocationLabel" Content="Location" HorizontalAlignment="Left" Margin="31,290,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.472,-0.73"/>
        <Label x:Name="ParcelInTransferLabel" Content="Parcel in Transfer" HorizontalAlignment="Left" Margin="31,390,0,0" VerticalAlignment="Top" Width="107"/>
        <TextBox x:Name="ModelTextBox" HorizontalAlignment="Left" Margin="250,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25" TextChanged="ModelTextBox_TextChanged"/>
        <TextBox x:Name="IDTextBox" HorizontalAlignment="Left" Margin="250,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25" TextChanged="IDTextBox_TextChanged"/>
        <TextBox x:Name="BatteryTextBox" HorizontalAlignment="Left" Margin="250,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25" IsReadOnly="True" TextChanged="BatteryTextBox_TextChanged"/>
        <TextBox x:Name="StatusTextBox" HorizontalAlignment="Left" Margin="250,240,0,0" Text="Maintanace" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25" IsReadOnly="True"/>
        <Label x:Name="LatitudeLabel" Content="Latitude" HorizontalAlignment="Left" Margin="135,290,0,0" VerticalAlignment="Top" Width="73" Height="23"/>
        <Label x:Name="LongitutdeLabel" Content="Longitutde" HorizontalAlignment="Left" Margin="135,340,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="LatitudeTextBox" HorizontalAlignment="Left" Margin="250,290,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25" IsReadOnly="True"/>
        <TextBox x:Name="LongitutdeTextBox" HorizontalAlignment="Left" Margin="250,340,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25" IsReadOnly="True"/>
        <TextBox x:Name="ParcelInTranferTextBox" HorizontalAlignment="Left" Margin="250,390,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25" TextChanged="ParcelInTranferTextBox_TextChanged"/>
        <Button x:Name="AddDroneButton" Content="Add Drone" HorizontalAlignment="Left" Height="50" Margin="633,365,0,0" VerticalAlignment="Top" Width="108" Click="Button_Click"/>
        <Label x:Name="NumOfStationLabel" Content="Number Of Station" HorizontalAlignment="Left" Margin="31,190,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NumOfStationTextBox" HorizontalAlignment="Left" Margin="250,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25" TextChanged="NumOfStationTextBox_TextChanged"/>
    </Grid>
</Window>
