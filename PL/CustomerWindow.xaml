<Window x:Class="PL.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="CustomerWindow" Height="600" Width="850">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Pictures\customerPic.jpeg" Opacity="0.7"/>
        </Grid.Background>
        <Grid x:Name="GridAddCustomer" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label x:Name="IdLblAdd" Content="ID" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="2" Grid.Row="1" FontFamily="Britannic Bold" FontSize="25" FontWeight="Bold" Foreground="#FFB98BCE" BorderBrush="#00000000"/>
                <Label x:Name="NameLblAdd" Content="Name" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="2" Grid.Row="2" FontFamily="Britannic Bold" FontSize="25" FontWeight="Bold" Foreground="#FFB98BCE" />
                <Label x:Name="LocationLblAdd" Content="Location" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="4" FontFamily="Britannic Bold" FontSize="25" FontWeight="Bold" Height="39" Width="105" Foreground="#FFB98BCE" />
                <Label x:Name="LongitudeLblAdd" Content="Longitude" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Grid.Row="4" FontFamily="Britannic Bold" FontSize="16" FontWeight="Bold" Margin="10,8,0,0" Foreground="#FFB98BCE"  BorderBrush="Black"/>
                <Label x:Name="LatitudeLblAdd" Content="Latitude" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Grid.Row="4" FontFamily="Britannic Bold" FontSize="16" FontWeight="Bold" Margin="10,38,0,0" Foreground="#FFB98BCE" />
                <Label x:Name="PhoneLblAdd" Content="Phone" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="2" Grid.Row="3" FontFamily="Britannic Bold" FontWeight="Bold" FontSize="18" Foreground="#FFB98BCE" />

                <TextBox x:Name="IdTxtAdd" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Id, Mode=TwoWay}" Width="90" Height="25" Grid.Column="3" Grid.Row="1" BorderBrush="#FFB64DE6" BorderThickness="2,2,2,2"/>
                <TextBox x:Name="NameTxtAdd" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Name, Mode=TwoWay}" Width="90" Height="25" Grid.Column="3" Grid.Row="2" BorderBrush="#FFB64DE6" BorderThickness="2,2,2,2"/>
                <TextBox x:Name="LatitudeTxtAdd" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Text="{Binding CustomerLocation.Latitude, Mode=TwoWay}" Width="90" Height="25" Grid.Column="3" Grid.Row="4" BorderBrush="#FFB64DE6" BorderThickness="2,2,2,2" Margin="10,36,0,0"/>
                <TextBox x:Name="LongituteTxtAdd" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Text="{Binding CustomerLocation.Longitude, Mode=TwoWay}" Width="90" Height="25" Grid.Column="3" Grid.Row="4" BorderBrush="#FFB64DE6" BorderThickness="2,2,2,2" Margin="10,8,0,0"/>
                <TextBox x:Name="PhoneTxtAdd" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Phone, Mode=TwoWay}" Width="90" Height="25" Grid.Column="3" Grid.Row="3" BorderBrush="#FFB64DE6" BorderThickness="2,2,2,2"/>

            </Grid>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Button x:Name="AddCustomerButtonAdd" Visibility="Visible" Content="Add Customer" Width="400"  Background="#FFB64DE6" FontFamily="Britannic Bold" FontSize="24" Click="AddCustomerButtonAdd_Click"/>
                <Button x:Name="CloseWindowButtonAdd" Visibility="Visible" Content="Close" Width="400"  Background="#FFB64DE6" FontFamily="Britannic Bold" FontSize="24" Click="CloseWindowButtonAdd_Click"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="GridUpdateCustomer" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="50*"/>

                </Grid.ColumnDefinitions>

                <Label x:Name="IdLblUp" Content="ID" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" FontFamily="Britannic Bold" FontSize="28" FontWeight="Normal" Foreground="#FF5E0063" BorderBrush="#00000000"  />
                <Label x:Name="NameLblUp" Content="Name" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" FontFamily="Britannic Bold" FontSize="28" FontWeight="Normal" Foreground="#FF5E0063"/>
                <Label x:Name="LocationLblUp" Content="Location" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" FontFamily="Britannic Bold" FontSize="35" FontWeight="Normal" Foreground="#FF5E0063"  Grid.Column="0"/>
                <Label x:Name="LongitudeLblUp" Content="Longitude" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.Row="3" FontFamily="Britannic Bold" FontSize="28" FontWeight="Normal" Foreground="#FF5E0063" BorderBrush="Black"/>
                <Label x:Name="LatitudeLblUp" Content="Latitude" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Grid.Row="4" FontFamily="Britannic Bold" FontSize="28" FontWeight="Normal" Foreground="#FF5E0063"/>
                <Label x:Name="PhoneLblUp" Content="Phone" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" FontFamily="Britannic Bold" FontSize="28" FontWeight="Normal" Foreground="#FF5E0063" Grid.Column="1"/>

                <TextBox x:Name="IdTxtUp" IsReadOnly="True" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Id, Mode=TwoWay}" Width="140" Height="36" Grid.Column="2" BorderBrush="#FFB64DE6" BorderThickness="2,2,2,2"/>
                <TextBox x:Name="NameTxtUp" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Name, Mode=TwoWay}" Width="140" Height="36" Grid.Column="2" Grid.Row="1" BorderBrush="#FFB64DE6" BorderThickness="4,4,4,4"/>
                <TextBox x:Name="LatitudeTxtUp" IsReadOnly="True"  HorizontalAlignment="Center" VerticalAlignment="Top" Text="{Binding CustomerLocation.Latitude, Mode=TwoWay}" Width="140" Height="36" Grid.Column="2" Grid.Row="4" BorderBrush="#FFB98BCE"  BorderThickness="2,2,2,2"/>
                <TextBox x:Name="LongituteTxtUp" IsReadOnly="True"  HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding CustomerLocation.Longitude, Mode=TwoWay}" Width="140" Height="36" Grid.Column="2" Grid.Row="3" BorderBrush="#FFB98BCE"  BorderThickness="2,2,2,2" />
                <TextBox x:Name="PhoneTxtUp" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Phone, Mode=TwoWay}" Width="140" Height="36" Grid.Column="2" Grid.Row="2"  BorderBrush="#FFB64DE6" BorderThickness="4,4,4,4"/>

                <!--<ListView x:Name="DronesInCharging" Visibility="Collapsed" Grid.Column="3" Margin="10,10,29,21" Grid.RowSpan="3" Grid.Row="1"
                          Background="#FFFA0C4D" Opacity="0.8" FontSize="20" FontFamily="Britannic Bold" >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Id Of Drone" DisplayMemberBinding="{Binding Id}" Width="150"/>
                            <GridViewColumn Header="Battery" DisplayMemberBinding="{Binding Battery}" Width="150"/>
                        </GridView>
                    </ListView.View>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    >
                </ListView>
                <Button x:Name ="ViewDronesInCharging" Content="View Drones In Charging" Grid.Column="3" Margin="46,20,46,11" Background="#FFFA0C4D" BorderBrush="#FF621818" Foreground="Black" FontFamily="Britannic Bold" FontSize="20" Visibility="Collapsed" Click="ViewDronesInCharging_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius"  Value="50"/>
                        </Style>
                    </Button.Resources>
                </Button>-->

                <Grid Grid.Row="5" Grid.ColumnSpan="4" VerticalAlignment="Bottom" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="UpdateCustomerButtonUD" Grid.Column="0" Visibility="Visible" Content="Update Customer" IsEnabled="{Binding NameTxtUD, Mode=TwoWay, XPath=Value}"  FontFamily="Britannic Bold" FontSize="24" Background="#FFB64DE6" Click="UpdateCustomerButtonUD_Click"/>
                    <Button x:Name="CancelButtonUD" Grid.Column="1" Visibility="Visible" Content="Cancel" FontFamily="Britannic Bold" FontSize="24" Background="#FFB64DE6"  Click="CancelButtonUD_Click" />
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Window>
